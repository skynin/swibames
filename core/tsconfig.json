{
  "$schema": "https://json.schemastore.org/tsconfig",  
  "display": "Node 16",  
  "env": {
    "TS_NODE_PROJECT": "./tsconfig.json"
  },
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "lib": ["es2021"],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2021",
    "allowJs": true,
    "moduleResolution": "node",
    "types": ["mocha", "node"]
  },
  "include": ["src/**/*","tests/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}